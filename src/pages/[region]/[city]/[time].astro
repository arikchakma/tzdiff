---
import BaseLayout from '../../../components/BaseLayout.astro';
import { geolocation } from '../../../lib/geo.ts';
import { buildTimezone, resolveTimezone } from '../../../lib/time.ts';
import { diffInHours, padTime, zonify } from '../../../lib/time.ts';

export const prerender = false;

type Params = {
  region: string;
  city: string;
  time: string;
};

const { region, city, time } = Astro.params as Params;
const { countryCode, city: userCity } = geolocation(Astro.request.headers);

const fromTZ = buildTimezone(region, city);
const toTZ = resolveTimezone(countryCode, userCity);
const convertedTime = zonify(fromTZ, toTZ!, time!);
const diffInHoursValue = diffInHours(padTime(time), padTime(convertedTime));
---

<BaseLayout title={`${fromTZ} - ${toTZ}`}>
  <div class="flex h-screen items-center justify-center">
    <div class="grid grid-cols-[1fr_auto_1fr] gap-12">
      <div class="flex flex-col items-end gap-2">
        <span class="text-5xl font-bold text-zinc-400">
          {fromTZ}
        </span>
        <span class="text-9xl font-black tabular-nums">
          {padTime(time)}
        </span>
      </div>
      <div class="flex flex-col items-center gap-2">
        <span class="text-5xl font-bold text-zinc-200">&nbsp;</span>
        <span class="text-9xl font-black text-zinc-200">&rarr;</span>
        <span class="text-4xl font-bold text-zinc-300">
          +{diffInHoursValue} hour{diffInHoursValue > 1 ? 's' : ''}
        </span>
      </div>
      <div class="flex flex-col items-start gap-2">
        <span class="text-5xl font-bold text-zinc-400">
          {toTZ}
        </span>
        <span class="text-9xl font-black tabular-nums">
          {padTime(convertedTime)}
        </span>
      </div>
    </div>
  </div>
</BaseLayout>
